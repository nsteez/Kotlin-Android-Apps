<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="@string/guess"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/txtGuess"
        android:layout_width="246dp"
        android:layout_height="51dp"
        android:layout_marginBottom="24dp"
        android:hint="@string/guessHere"
        android:inputType="text"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnGuess"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="@string/word_to_guess"
        android:textSize="28sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/txtGuess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="183dp"
        android:layout_height="435dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Guess #1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Guess #1 Check" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Guess #2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Guess #2 Check" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Guess #3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Guess #3 Check" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="174dp"
        android:layout_height="432dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008">

        <TextView
            android:id="@+id/guess1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="TextView"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/guessCheck1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="TextView"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/guess2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="TextView"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/guessCheck2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="TextView"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/guess3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="TextView"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/guessCheck3"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="TextView"
            android:textAlignment="center"
            android:visibility="invisible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>